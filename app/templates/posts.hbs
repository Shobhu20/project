<h2> Blog Posts</h2>
{{#ui-modal name="editPost" class="editPost"}}
  <div class="header">
    Edit post
  </div>

  <div class="content">
    <div class="ui form">
      <div class="field">
        <label>Post Title</label>
        {{input type="text" id="editPostTitle" name="editPostTitle" cols="50" rows="1" value=title placeholder = "add title"}}
      </div>
      <div class="field">
        <label>Post Body</label>
        {{textarea id="editPostBody" name="editPostBody                                                                                                           " value=body cols="50" rows="3" placeholder="add body"}}
      </div>
    </div>
  </div>
  <br>

  <div class="actions">
    <div class="ui black deny button" >
      Cancel
    </div>
    <div class="ui positive right labeled icon button">
      Save
      <i class="checkmark icon"></i>
    </div>
  </div>
{{/ui-modal}}


<div class = "ui grid">
  {{#each model as |onePost|}}
    <div class="eight wide column">
      title : {{onePost.title}}<br>
      body : {{onePost.body}}

    </div>
    <div class="four wide column right aligned">
      {{edit-post ID= onePost.id}}
    </div>

    <div class="four wide column left aligned">
      {{delete-post ID=onePost.id}}
    </div>
  {{/each}}
</div>

